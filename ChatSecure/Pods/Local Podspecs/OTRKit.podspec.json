{
  "name": "OTRKit",
  "version": "1.1.2",
  "summary": "OTRKit is a lightweight Objective-C wrapper for libotr to provide OTR (Off the Record) message encryption.",
  "authors": "Chris Ballinger <chris@chatsecure.org>",
  "homepage": "https://chatsecure.org",
  "license": {
    "type": "LGPL",
    "file": "LICENSE"
  },
  "source": {
    "git": "https://github.com/ChatSecure/OTRKit.git",
    "tag": "1.1.2"
  },
  "prepare_command": "bash ./scripts/build-all.sh",
  "platforms": {
    "ios": "8.0"
  },
  "source_files": [
    "OTRKit/**/*.{h,m}",
    "OTRKitDependencies/include/**/*.h"
  ],
  "header_mappings_dir": "OTRKitDependencies/include",
  "public_header_files": "OTRKit/**/*.h",
  "preserve_paths": [
    "COPYING.LGPLv2.1",
    "COPYING.MPLv2",
    "OTRKitDependencies/libs/*",
    "OTRKitDependencies/include/**/*.h"
  ],
  "vendored_libraries": "OTRKitDependencies/lib/*.a",
  "libraries": [
    "gpg-error",
    "gcrypt",
    "otr"
  ],
  "requires_arc": true,
  "frameworks": "Security"
}
